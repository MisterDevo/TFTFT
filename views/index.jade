extends layout
block content
  #wrapper(ng-controller='globalController')
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation', style='margin-bottom: 0')
      .navbar-header
        button.navbar-toggle(type='button', ng-init="sideCollapsed = true", ng-click="sideCollapsed = !sideCollapsed")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/#/')
          .logo

      ul.nav.navbar-top-links.navbar-left
        li(uib-dropdown, auto-close='outsideClick')
          a(id='mailme-link', href, uib-dropdown-toggle)
            i.fa.fa-envelope.fa-fw
            i.fa.fa-caret-down
          ul(uib-dropdown-menu)
            mailme

      ul.nav.navbar-top-links.navbar-right.navbar-collapse.collapse(uib-collapse='sideCollapsed')
        li
          a(href='/#login')
            |  Login


      .navbar-default.sidebar(role='navigation')
        .sidebar-nav.navbar-collapse.collapse(uib-collapse='sideCollapsed')
          ul#side-menu.nav
            li
              a(id='mocha-link', href, ng-click="mochaCollapsed = !mochaCollapsed")
                i.glyphicon.glyphicon-link
                |  Mocha Test
              ul.nav.nav-second-level(uib-collapse='mochaCollapsed')
                li
                  a(id='mocha-unit-link' href='#mocha-unit')
                    i.glyphicon.glyphicon-link
                    |  Unit
                li
                  a(id='mocha-route-link' href='#mocha-route')
                    i.glyphicon.glyphicon-link
                    |  Route
                li
                  a(id='mocha-spec-link' href='#mocha-spec')
                    i.glyphicon.glyphicon-link
                    |  End To End
                    img(id="sl-logo" src="images/sl.svg" alt="SL" popover-placement='right' popover-trigger='mouseenter' uib-popover-template='myPopoverTemplate')

                  script(type="text/ng-template" id="myPopoverTemplate.html")
                    |    <img id="sl-mat-pp" src="images/misterdevo.svg" alt="Sauce Test Status"/>


            li
              a(id='coverage-link', href='#coverage')
                i.glyphicon.glyphicon-link
                |  Istanbul Cov. Code



    nav.navbar.navbar-default.navbar-fixed-bottom
      ul.nav.navbar-top-links.navbar-right
        li(id='slmat' uib-dropdown auto-close='outsideClick' ng-show='displaySL')
          a(id='sl-link' href uib-dropdown-toggle)
            img(id="sl-logo" src="images/sl.svg" alt="SL")
            i.fa.fa-caret-up
          ul(uib-dropdown-menu)
            img(id="sl-mat-dd" src="images/misterdevo.svg" alt="SL")
        li
          a(href='https://github.com/MisterDevo/TFTFT/releases')
            | #{version}
        li
          a(href='https://github.com/MisterDevo/TFTFT')
            i.fa.fa-github-alt


  #page-wrapper
    .row
      div(ng-view='')
